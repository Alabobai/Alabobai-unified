# Qdrant Vector Database Configuration
# Copy this file to .env and adjust as needed

# API Key (leave empty for local development without auth)
QDRANT_API_KEY=

# Disable telemetry for privacy (true/false)
QDRANT_TELEMETRY_DISABLED=false

# Store payload on disk instead of RAM (recommended for large datasets)
QDRANT_ON_DISK_PAYLOAD=false

# Indexing threshold - vectors below this count use brute force search
QDRANT_INDEXING_THRESHOLD=20000

# Maximum segment size in KB before triggering optimization
QDRANT_MAX_SEGMENT_SIZE=200000

# Memory limits for Docker container
QDRANT_MEMORY_LIMIT=2G
QDRANT_MEMORY_RESERVATION=512M

# Data persistence paths (relative to docker-compose.yml)
QDRANT_DATA_PATH=./data
QDRANT_SNAPSHOTS_PATH=./snapshots
